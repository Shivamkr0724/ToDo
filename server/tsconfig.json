{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "resolveJsonModule": true,

    "types": ["node", "express"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
